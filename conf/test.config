/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running full-size tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a full size pipeline test.

    Use as follows:
        nextflow run sanger-tol/curationpretext -profile test_full,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

cleanup = true

params {
    config_profile_name        = 'Full test profile'
    config_profile_description = 'Full test dataset to check pipeline function'

    // Input data for full size test
    // Limit resources so that this can run on GitHub Actions
    max_cpus    = 4
    max_memory  = '10.GB'
    max_time    = '6.h'

    sample      = "testing"
    input       = "https://tolit.cog.sanger.ac.uk/test-data/Trichoderma_citrinoviride/assembly/release/grTriPseu1.fa.gz"
    longread    = "https://tolit.cog.sanger.ac.uk/test-data/Trichoderma_citrinoviride/genomic_data/grTriPseu1/pacbio/"
    cram        = "https://tolit.cog.sanger.ac.uk/test-data/Trichoderma_citrinoviride/genomic_data/grTriPseu1/hic-arima/"
    sample      = "CurationPretextTest"
    teloseq     = "TTAGGG"
    aligner     = "bwamem2"
}
